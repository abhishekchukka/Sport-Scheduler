<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reports</title>
    <link rel="stylesheet" href="/css/output.css" />
    
  </head>
  <body class="bg-gray-100 min-h-screen ">
    <!-- Navbar -->
    <nav
      class="bg-white shadow-sm py-4 px-6 mx-6 rounded-lg flex justify-between items-center"
    >
      <div class="text-xl font-semibold text-gray-800">
        Report <span class="text-lg font-thin">/~<%= reports[0].user.name %></span>
      </div>
      <div class="flex gap-4">
        <a href="/dashboard" class="text-gray-700 hover:text-gray-900">Dashboard</a>
        <a href="/logout" class="text-red-600 hover:text-red-300">Logout</a>
      </div>
    </nav>
    <!-- Main Content -->
    <main class="container mx-auto p-6">
      <h1 class="text-3xl font-bold text-center mb-6">Reports</h1>

      <% if (reports.length > 0) { %>
      <div class="space-y-6">
        <% reports.forEach((report) => { %>
        <!-- Report Card -->
        <div class="bg-white shadow-md rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-2">Session: <%= report.sessionName %></h2>
          <p class="text-gray-600">
            <strong>Date:</strong> <%= report.date %><br />
            <strong>Time:</strong> <%= report.time %><br />
            <strong>Venue:</strong> <%= report.venue %><br />
            <strong>Participants:</strong>
            <% if (report.participants.length > 0) { %>
            <ul class="list-disc ml-5">
              <% report.participants.forEach((participant) => { %>
              <li><%= participant %></li>
              <% }); %>
            </ul>
            <% } else { %>
            <em>No participants yet</em>
            <% } %>
          </p>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <p class="text-gray-700 text-center mt-4">No sessions created yet.</p>
      <% } %>
    </main>
  </body>
</html>
